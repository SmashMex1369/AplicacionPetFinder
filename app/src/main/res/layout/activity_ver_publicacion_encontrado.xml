<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarilloClaro"
    android:fitsSystemWindows="true"
    tools:context=".actividades.VerPublicacionExtravioActivity">

    <View
        android:id="@+id/view_header_publicacion"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/rojo"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/imab_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        android:src="@drawable/back_arrow"
        android:contentDescription="@string/img_back_arrow"/>
    <TextView
        android:id="@+id/tv_titulo_encontrado"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:fontFamily="@font/itim"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:paddingHorizontal="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imab_back"
        app:layout_constraintBottom_toBottomOf="@+id/view_header_publicacion"
        android:text="Aa"/>
    <ImageView
        android:id="@+id/imgswitch_fotos_extravidos"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/descp_carusel"
        app:layout_constraintTop_toBottomOf="@id/view_header_publicacion"/>
    <TextView
        android:id="@+id/tv_fecha_extravio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/itim"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="@string/tv_fecha_encuentro"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@+id/imgswitch_fotos_extravidos"/>


    <LinearLayout
        android:id="@+id/linear_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_fecha_extravio">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/itim"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:text="@string/tv_raza_publicacion"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/itim"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:text="@string/tv_sexo_publicacion"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/itim"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:text="@string/tv_edad_publicacion"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ultima_vez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/itim"
        android:text="@string/tv_ultima_vez"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_datos"
        android:background="@color/naranjaClaro"
        android:gravity="center_horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ultima_vez"
        app:layout_constraintBottom_toTopOf="@id/linear_botones"/>
    <LinearLayout
        android:id="@+id/linear_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/itim"
            android:textColor="@color/black"
            android:text="@string/btn_chat_grupal"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/itim"
            android:text="@string/btn_contactar_dueÃ±o"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>