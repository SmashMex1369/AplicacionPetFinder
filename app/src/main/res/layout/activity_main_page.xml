<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageActivity"
    android:fitsSystemWindows="true"
    android:background="@color/amarilloClaro">

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/rojo"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imab_profile_picture"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_header"
        app:layout_constraintBottom_toBottomOf="@id/view_header"
        app:shapeAppearanceOverlay="@style/CircularImage"
        app:srcCompat="@drawable/image_perfil_por_defecto"
        android:contentDescription="@string/imagen_perfil"/>

    <TextView
        android:id="@+id/tv_petfinder"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:fontFamily="@font/itim"
        android:text="@string/app_name"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imab_profile_picture"
        app:layout_constraintBottom_toBottomOf="@id/view_header"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <ImageButton
        android:id="@+id/btn_chat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_petfinder"
        app:layout_constraintEnd_toStartOf="@id/img_buscar"
        app:layout_constraintBottom_toBottomOf="@id/view_header"
        android:src="@drawable/message_outline"
        android:contentDescription="@string/imgb_chat" />

    <ImageView
        android:id="@+id/img_buscar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:layout_marginEnd="9dp"
        android:src="@drawable/lupa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_header"
        android:contentDescription="@string/imagen_buscar"
        android:focusable="true" />



    <LinearLayout
        android:id="@+id/linear_perdidos_encontrados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_header"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/view_header"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/itim"
            android:text="@string/tv_perdidos"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="36sp"
            android:fontFamily="@font/itim"
            android:text="@string/tv_encontrados"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/linear_perdidos_encontrados"
        android:layout_alignTop="@id/linear_perdidos_encontrados">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:background="@color/black"/>
            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:background="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ordenar_filtrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/itim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_perdidos_encontrados"
        android:text="@string/tv_ordenar_filtrar"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        app:drawableEndCompat="@drawable/filter_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/publicaciones_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ordenar_filtrar"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_publicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:fabSize="auto"
        android:text="@string/efab_publicacion"
        app:iconGravity="end"
        android:fontFamily="@font/itim"
        android:textStyle="bold"
        android:textSize="15sp"
        android:backgroundTint="@color/naranjaMedio"
        app:icon="@drawable/priority_high"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/fabtn_acciones"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_encontrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/found"
        android:backgroundTint="@color/rojo"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@id/fab_publicaciones"
        app:layout_constraintEnd_toEndOf="@id/fab_publicaciones"
        android:contentDescription="@string/fab_encontrado" />
    <TextView
        android:id="@+id/tv_fab_encontrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_encontrado"
        android:layout_marginEnd="7dp"
        android:fontFamily="@font/itim"
        android:paddingHorizontal="3dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/fab_encontrado"
        app:layout_constraintEnd_toStartOf="@+id/fab_encontrado"
        app:layout_constraintTop_toTopOf="@+id/fab_encontrado"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_perdido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/lost"
        android:backgroundTint="@color/rojo"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@id/fab_encontrado"
        app:layout_constraintEnd_toEndOf="@id/fab_encontrado"
        android:contentDescription="@string/fab_perdido" />
    <TextView
        android:id="@+id/tv_fab_perdido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_perdido"
        android:layout_marginEnd="7dp"
        android:fontFamily="@font/itim"
        android:paddingHorizontal="3dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/fab_perdido"
        app:layout_constraintEnd_toStartOf="@+id/fab_perdido"
        app:layout_constraintTop_toTopOf="@+id/fab_perdido"/>
</androidx.constraintlayout.widget.ConstraintLayout>